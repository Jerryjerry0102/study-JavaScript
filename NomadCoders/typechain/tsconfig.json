{
  // 어디에 ts 파일이 위치하는지
  // include 배열에는 우리가 자바스크립트로 컴파일하고 싶은 모든 디렉터리를 넣어줄 것
  "include": ["src"],
  "compilerOptions": {
    // outDir는 자바스크립트 파일이 생성될 디렉터리를 저장한다.
    "outDir": "build",
    // target은 어떤 버전의 자바스크립트로 내가 타입스크립트를 컴파일 하고 싶은지를 나타낸다.
    "target": "ES6",
    // (target runtime environment)목표로 하는 실행 환경을 나타낸다.
    // -> 자바스크립트 코드가 어떤 환경에서 동작할지를 알려준다는 의미
    // 타입스크립트에게 무슨 API를 쓸거고 어떤 환경에서 코드를 실행시킬 건지를 알려주는 곳
    // 그리고 코드가 동작하는 환경에 따라, 타입스크립트는 기본적으로 API의 타입을 알기에, 타입에 대해 알려준다.
    // 알려준 구동환경에 따라 타스는 나에게 어떤 자동완성 기능을 제공해야 하는지 알게 된다.
    "lib": ["ES6", "DOM"],
    // 모든 실수로부터 보호하는 기능을 활성화한다.
    "strict": true
  }
}
